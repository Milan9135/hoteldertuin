@inherits LayoutComponentBase
@inject UserService UserService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (UserService.CurrentUser == null)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register" Match="NavLinkMatch.All">
                        <h5><span class="bi bi-house-door-fill-nav-menu" aria-hidden="true">Register</span></h5>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                        <h5><span class="bi bi-house-door-fill-nav-menu" aria-hidden="true">Login</span></h5>
                    </NavLink>
                </div>
            }
            else
            {
                <div class="nav-item px-3">
                    Logged in as: @UserService.CurrentUser.Name
                </div>
                <div class="nav-item px-3">
                    <button @onclick="() => UserService.LogoutAsync()">Logout</button>
                </div>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>